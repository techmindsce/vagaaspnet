@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Techminds CRM</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/Assets/Style/vendor/css/font-awesome.min.css" />

    @Styles.Render("~/Assets/Style/vendor/_css")

    <script type="text/javascript">
        if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>
</head>
<body class="skin-blue-light fixed sidebar-mini">
    <div id="applicationHost">
        @Html.Partial("_splash")
    </div>

    @Scripts.Render("~/Scripts/vendor")
    @Scripts.Render("~/Scripts/App")

    <script type="text/javascript" src="~/Assets/Scripts/vendor/require.js" data-main="/App/main"></script>
</body>
</html>
